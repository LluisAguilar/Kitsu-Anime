<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".ui.fragments.BottomSheetArticleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_dialog_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_fragment_dismiss_iv"
            android:layout_width="@dimen/arrow_down_width"
            android:layout_height="@dimen/arrow_down_height"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_down" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_article_detail_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_article_margin"
            tools:listitem="@layout/item_chapters_characters"
            />

    </LinearLayout>


</LinearLayout>